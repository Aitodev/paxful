<script>
  
jQuery(document).ready(function() {
    var update_texts = function() {
        $('body').i18n();
    };
  
  	var urlStr = window.location.href;
  	var urlParams = urlStr.split("://")[1].split("/");
  	var locale;
  	function getLocale() {
			for (var i = 0; i < urlParams.length; i++) {
        if (urlParams[i] == 'en-us' || urlParams[i] == 'ru' || urlParams[i] == 'tr' || urlParams[i] == 'es-es' || urlParams[i] == 'zh-cn' || urlParams[i] == 'pt-br' || urlParams[i] == 'th' || urlParams[i] == 'ja' || urlParams[i] == 'id' || urlParams[i] == 'ko' || urlParams[i] == 'tl' || urlParams[i] == 'de' || urlParams[i] == 'fr' || urlParams[i] == 'it' || urlParams[i] == 'vi') {           
         	locale = urlParams[i]; 
       	} else if (urlParams[i].match(/locale/)) {
           var localeParam = urlParams[i].split("=");
           locale = localeParam[1];
         } else {
            locale = 'en-us';             
         }
      }
    };
    getLocale();
                                           
  	$.i18n().locale = locale;
                                        
    /* console.log('locale ', locale); */

